---
// src/components/Header.astro

---

<header class="header">
  <div class="header__container">
    <a href="/" class="header__logo">
      <img src="/images/logo-museo.png" alt="Museo Etnológico de Almodóvar del Río" />
    </a>
    <input type="checkbox" id="nav-toggle" class="nav-toggle" aria-label="Abrir menú" />
    <nav class="header__nav">
      <ul>
        <li><a href="/museo">El Museo</a></li>
        <li><a href="/exposiciones">Exposiciones</a></li>
        <li><a href="/actividades">Actividades</a></li>
        <li><a href="/contacto">Contacto</a></li>
      </ul>
    </nav>
    <label for="nav-toggle" class="header__menu-toggle" aria-label="Abrir menú">
      <svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><line x1="3" y1="12" x2="21" y2="12"/><line x1="3" y1="6" x2="21" y2="6"/><line x1="3" y1="18" x2="21" y2="18"/></svg>
    </label>
  </div>
</header>
<!-- Menú responsive solo con CSS -->