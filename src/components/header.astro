---
// src/components/Header.astro
---
<header class="header">
  <div class="header__container">
    <a href="/" class="header__logo">
      <img src="/images/logo-museo.png" alt="Museo Etnológico de Almodóvar del Río" />
    </a>
    
    <!-- Botón móvil -->
    <input type="checkbox" id="nav-toggle" class="nav-toggle" aria-label="Abrir menú" />
    <label for="nav-toggle" class="header__menu-toggle" aria-label="Abrir menú">
      <span class="menu-icon"></span>
    </label>
    
    <!-- Navegación -->
    <nav class="header__nav">
      <ul>
        <li><a href="#sobre" class="nav-link">Sobre el museo</a></li>
        <li><a href="#coleccion" class="nav-link">Colección</a></li>
        <li><a href="#exposiciones" class="nav-link">Exposiciones</a></li>
        <li><a href="#actividades" class="nav-link">Actividades</a></li>
        <li><a href="#visitanos" class="nav-link">Visítanos</a></li>
        <li><a href="#contacto" class="nav-link">Contacto</a></li>
      </ul>
    </nav>
  </div>
</header>